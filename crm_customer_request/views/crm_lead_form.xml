<odoo>
    <data>
        <record id="view_crm_lead_form" model="ir.ui.view">
            <field name="name">crm.lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="view_crm_customer_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[@name='leads']" position="inside">
                    <page string="Customer Requests">
                        <field name="request_ids"/>
                        <field name="total_sales"/>
                        <field name="expected_revenue"/>
                    </page>
                </xpath>
            </field>
        </record>

        </record>
    </data>
<odoo>